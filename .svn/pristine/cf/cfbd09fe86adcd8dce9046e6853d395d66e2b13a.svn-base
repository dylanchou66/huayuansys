<form id="edit-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">

    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Check_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-check_id" data-rule="required" data-source="dict_v/index" data-params='{"custom[status]":"1","custom[dict_id]":"32"}' class="form-control selectpage" name="row[check_id]" type="text" value="{$row.check_id|htmlentities}" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Check_leder_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-check_leder_id" data-rule="required" data-source="auth/admin" data-field="nickname" data-params='{"custom[status]":"normal"}' class="form-control selectpage" name="row[check_leder_id]" type="text" value="{$row.check_leder_id|htmlentities}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Check_order_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-check_order_id" data-rule="required" data-source="auth/admin" data-field="nickname" data-params='{"custom[status]":"normal"}' class="form-control selectpage" name="row[check_order_id]" type="text" value="{$row.check_order_id|htmlentities}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Check_boss_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-check_boss_id" data-rule="required" data-source="auth/admin" data-field="nickname" data-params='{"custom[status]":"normal"}' class="form-control selectpage" name="row[check_boss_id]" type="text" value="{$row.check_boss_id|htmlentities}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Check_money_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-check_money_id" data-rule="required" data-source="auth/admin" data-field="nickname" data-params='{"custom[status]":"normal"}' class="form-control selectpage" name="row[check_money_id]" type="text" value="{$row.check_money_id|htmlentities}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Check_pay_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-check_pay_id" data-rule="required" data-source="auth/admin" data-field="nickname" data-params='{"custom[status]":"normal"}' class="form-control selectpage" name="row[check_pay_id]" type="text" value="{$row.check_pay_id|htmlentities}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Ps')}:</label>
        <div class="col-xs-12 col-sm-8">
            <textarea id="c-ps" class="form-control " rows="5" name="row[ps]" cols="50">{$row.ps|htmlentities}</textarea>
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
