    //卡余额
    public function yue($card_id){
        $ttl_map['card_id'] = $card_id;
        $ttl_map['status'] = 3;//完成状态
        $ttl_map['money_type'] = 0;
        $ttl = $this->model->where($ttl_map)->sum('money');
        $d_map['card_id'] = $card_id;
        $d_map['status'] = 3;//完成状态
        $d_map['money_type'] = 1;
        $d = $this->model->where($d_map)->sum('money');
        $resutl = $ttl-$d;
        return $resutl;
    }

